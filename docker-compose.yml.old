version: '3.8'

services:
  postgres-db:
    image: postgres:latest
    container_name: postgresql
    environment:
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
      POSTGRES_DB: ${POSTGRES_DB}
      POSTGRES_HOST_AUTH_METHOD: ${POSTGRES_HOST_AUTH_METHOD}
    ports:
      - "5432:5432"

  nginx-unit:
    container_name: nginx-unit
    build:
      context: ./nginx-unit
    ports:
      - "8300:8300"
    depends_on:
      - postgres-db
    environment:
      DB_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
      DB_NAME: ${POSTGRES_DB}
      DB_HOST: ${POSTGRES_HOST}
      DB_PORT: ${POSTGRES_PORT}

  nginx-plus:
    container_name: nginx-plus
    build:
      context: ./nginx-plus
    ports:
      - "80:80"
    depends_on:
      - nginx-unit
    volumes:
      - ./nginx-plus/nginx.conf:/etc/nginx/nginx.conf:ro
  





